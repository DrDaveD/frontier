<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>froNtier Database Web Application</display-name>
    <description>
        Da project description goes here I think.
    </description>

    <servlet> 
        <servlet-name>Frontier</servlet-name>
        <servlet-class>gov.fnal.Frontier</servlet-class>
        <load-on-startup/>
    </servlet>

    <servlet-mapping>
        <servlet-name>Frontier</servlet-name>
        <url-pattern>/Frontier</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>300</session-timeout>    <!-- 300 minutes -->
    </session-config>

    <resource-ref>
        <description>
            This is the refererence to the Oracle data source we 
            use to talk to the database configured in server.xml.
        </description>
        <res-ref-name>jdbc/frontier</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>

